<?php
// Configuración de la conexión a la base de datos
$host = "localhost"; // Cambiar por la dirección de tu servidor si es remoto
$dbname = "nombre_base_datos"; // Cambiar por el nombre de tu base de datos
$username_db = "usuario_remoto"; // Usuario configurado en tu base de datos
$password_db = "contraseña"; // Contraseña del usuario configurado

// Conexión a MySQL
try {
    $conn = new PDO("mysql:host=$host;dbname=$dbname", $username_db, $password_db);
    $conn->setAttribute(PDO::ATTR_ERRMODE, PDO::ERRMODE_EXCEPTION);
} catch (PDOException $e) {
    die("Error de conexión: " . $e->getMessage());
}

// Procesar los datos del formulario
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    $username = $_POST["username"];
    $password = $_POST["password"];

    // Consulta para verificar el usuario
    $query = "SELECT * FROM usuarios WHERE username = :username AND password = :password";
    $stmt = $conn->prepare($query);
    $stmt->bindParam(":username", $username);
    $stmt->bindParam(":password", $password);
    $stmt->execute();

    if ($stmt->rowCount() > 0) {
        echo "¡Inicio de sesión exitoso!";
    } else {
        echo "Usuario o contraseña incorrectos.";
    }
}
?>
